{
    "env": {
        "es6": true,
        "node": true,
        "commonjs": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 10,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "camelcase": "off",
        "linebreak-style": "off"
    },
    "overrides": [
        {
            "files": [
                "src/**/*.js"
            ],
            "rules": {
                "quotes": [
                    2,
                    "single"
                ]
            }
        }
    ]
}